set -o pipefail

filter=
filteropt=
show=
OPTIND=1

while getopts "f:sS" opt; do
    case "$opt" in
    f)  filter=--filter
        filteropt="$OPTARG"
        ;;
    s)  show=-s
        ;;
    S)  show=-S
        ;;
    esac
done

shift $((OPTIND-1))


csv-ps -c pid,ppid,command,vm_rss_KiB "$@" | \
	csv-tree --key pid --parent ppid --indent command --sum vm_rss_KiB $filter "$filteropt" | \
	csv-cut -c pid,vm_rss_KiB,command $show
