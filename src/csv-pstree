set -o pipefail

filter=
filteropt=
treeopts=
cutopts=
OPTIND=1
columns=pid

while getopts "f:LsS" opt; do
    case "$opt" in
    f)  filter=--filter
        filteropt="$OPTARG"
        ;;
    L)  treeopts=-L
        columns=$columns,level
        ;;
    s)  cutopts=-s
        ;;
    S)  cutopts=-S
        ;;
    esac
done

columns=$columns,vm_rss_KiB,command

shift $((OPTIND-1))

csv-ps -c pid,ppid,command,vm_rss_KiB "$@" | \
	csv-tree --key pid --parent ppid --indent command --sum vm_rss_KiB $treeopts $filter "$filteropt" | \
	csv-cut -c $columns $cutopts
